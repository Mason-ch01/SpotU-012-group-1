<!-- Search Bar -->
<div class="container mt-5" style="align-self: right; width:75%;">
    <form method="get" action="/search-song">
        <input type="text" id="songSearch" name="songName" placeholder="Search for Songs" style="color: white; border-radius: 20px; border:none;">
    </form>
</div>

<!-- Display search results -->
<div class="row mt-4">
    {{#each tracks}}
    <div class="col-md-4">
        <div class="card">
            <img src="{{this.album.images.[0].url}}" class="card-img-top" alt="{{this.name}}">
            <div class="card-body">
                <h5 class="card-text">{{this.name}}</h5>
                <p class="card-text">Artist(s): 
                    {{#each this.artists}} 
                        {{this.name}}{{#unless @last}}, {{/unless}}
                    {{/each}}
                </p>
                <a href="{{this.uri}}" target="_blank">Listen Here</a><br>
                
                <!-- Add a button to get the details of the track -->
                <form action="/get-track-details" method="get">
                    <input type="hidden" name="trackId" value="{{this.id}}"> <!-- Send track id -->
                    <button type="submit" class="btn btn-primary mt-2">Get Details</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <p>No songs found.</p>
    {{/each}}
</div>
</div>